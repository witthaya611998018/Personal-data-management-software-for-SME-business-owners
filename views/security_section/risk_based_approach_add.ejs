    <script>
        function get_data() {
            $.ajax({
                type: 'GET',
                url: `/api/measures/doc/list`,
                success: async function (result) {

                    let measures = result.measures
                    let doc = result.doc
                    let depth = result.depth
                    let assets = result.assets


                    let Defense_Depth = ``
                    let Measure_Depth = ``
                    let selecte_type_policy = ``
                    let select_assets = `<option selected>เลือก...</option>`



                    if (doc == 'ไม่มีข้อมูล') {
                        selecte_type_policy = `<option value="">ไม่มีเอกสารที่เปิดใช้งาน</option>`
                    } else {
                        doc.forEach(element => {
                            selecte_type_policy += `
                        <option value="${element.doc_id}">${element.doc_name}</option>
                        `
                        });
                    }

                    if (assets == 'ไม่มีข้อมูล') {
                        select_assets = `<option value="">ไม่มีทรัพย์สินสารสนเทศ</option>`
                    } else {
                        assets.forEach(element => {
                            select_assets += `
                        <option value="${element.assets_id}">${element.assets_name}</option>
                        `
                        });
                    }

                    depth.forEach(element => {
                        if (element.depth_type == 1) {
                            Defense_Depth += `
                        <option value="${element.depth_id}">${element.depth_name}</option>
                        `
                        } else if (element.depth_type == 2) {
                            Measure_Depth += `
                        <option value="${element.depth_id}">${element.depth_name}</option>
                        `
                        }
                    });

                    document.getElementById('Defense-Depth').innerHTML = Defense_Depth
                    document.getElementById('Measure_Depth').innerHTML = Measure_Depth
                    document.getElementById('selecte_type_policy').innerHTML = selecte_type_policy
                    document.getElementById('select_assets').innerHTML = select_assets

                },
                error: function (e) {
                    console.log(e);
                }
            });
        }
        get_data()
        $('#head_approach').on('change', async function () {
            let Defense_Depth_div = document.getElementById("Defense_Depth_div")
            let Measure_Depth_Div = document.getElementById("Measure_Depth_Div")
            if ($(this).val() == '1') {
                Defense_Depth_div.style.display = ""
                Measure_Depth_Div.style.display = "none"
                console.log(Defense_Depth_div);
            } else {
