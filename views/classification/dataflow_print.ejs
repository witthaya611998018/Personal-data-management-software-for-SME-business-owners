<!doctype html>
<html>
 <head>
  <link href="/UI/dist/css/style.min.css" rel="stylesheet">
  <style>
    body {
      width: 100%;
      height: 100%;
      margin: 0;
      padding: 0;
    }
    .page {
        width: 297mm;
        height: 210mm;
        padding: 10mm;
        margin: 10mm auto;
        border: 1px #D3D3D3 solid;
        border-radius: 5px;
        background: white;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }
    .page img{
      width: 100%;
    }
    @page {
        size: A4 landscape;
        margin: 0;
    }
    @media print {
        #button-print #print-agian { display: none; }
        /* html, body {
            width: 297mm;
            height: 210mm;        
        } */
        .page {
            margin: 0;
            border: initial;
            border-radius: initial;
            width: initial;
            height: initial;
            box-shadow: initial;
            background: initial; 
            page-break-after: always;
        }
    }
  </style>
 </head>
 <body>
   <div class="page" id="printer">
   </div>
   <div id="button-print" class="text-center">
     <button id="print-agian" class="btn btn-info">สั่งพิมพ์ใหม่อีกครั้ง</button>
   </div>
   <script src="/UI/assets/libs/jquery/dist/jquery.min.js"></script>
   <script>
     var image = new Image();
     image.src = '<%- message -%>';
     $('div#printer').html(image)
     window.print();
     $('button#print-agian').on('click', function(){
       window.print();
     })
   </script>
 </body>
</html>
