<%- include('../_header') -%>
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-md-5 align-self-center">
                <h3 class="page-title">กิจกรรมประมวลผล</h3>
                <div class="d-flex align-items-center" style="margin-top: 1%;">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/index">หน้าแรก</a></li>
                            <li class="breadcrumb-item"><a href="/classification/event/">กิจกรรมประมวลผล</a></li>
                            <li class="breadcrumb-item active" aria-current="page">เพิ่มกิจกรรมประมวล</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="col-md-7 align-items-center justify-content-end d-md-flex">
                <a href="/classification/event/" class="btn btn-secondary">ย้อนกลับ</a>
            </div>
        </div>
    </div>

    <div class="container-fluid" id="ev_index">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="border-bottom title-part-padding">
                        <h4 class="card-title mb-0">
                            เพิ่มกิจกรรมประมวลที่สามารถนำไปใช้งานร่วมกับรูปแบบการประมวลผลข้อมูล
                        </h4>
                    </div>
                    <div class="card-body">
                        <form action="/classification/event/add" method="POST">
                            <div class="row mb-4 mt-2">
                                <div class="col-md-2 d-md-flex align-items-center fw-bold">
                                    ชื่อกิจกรรมประมวลผล
                                </div>
                                <div class="col-md-10 d-md-flex align-items-center">
                                    <input type="text" name="event_process_name"
                                        placeholder="กรุณาป้อนกิจกรรมประมวลผล..." class="form-control" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-2 align-items-center fw-bold">
                                    เพิ่ม มาตราการรักษาความปลอดภัยเข้าในกิจกรรม
                                </div>
                                <div class="col-md-3">
                                    General Measures
                                    <select name="measures_id" class="select2 form-control" multiple="multiple"
                                        style="width: 100%;">
                                        <%if (measures) {%>
                                            <%for (let i=0;i<measures.length;i++){%>
                                                <option value="<%=measures[i].measures_id%>">
                                                    <%=measures[i].measures_section_name%>
                                                </option>
                                                <%}%>
                                                    <%}%>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    Risk Base Approach
                                    <select name="approach_id" class="select2 form-control" multiple="multiple"
                                        style="width: 100%;">
                                        <%if (approach) {%>
                                            <optgroup label="Information assets">
                                                <%for (let i=0;i<approach.length;i++){%>
                                                    <%if (approach[i].approach_heading_risk_based==1) {%>
                                                        <option value="<%=approach[i].approach_id%>">
                                                            <%=approach[i].measures_section_name%>
                                                        </option>
                                                        <%}%>
                                                            <%}%>
                                            </optgroup>
                                            <optgroup label="Network and Equipment">
                                                <%for (let i=0;i<approach.length;i++){%>
                                                    <%if (approach[i].approach_heading_risk_based==2) {%>
                                                        <option value="<%=approach[i].approach_id%>">
                                                            <%=approach[i].measures_section_name%>
                                                        </option>
                                                        <%}%>
                                                            <%}%>
                                            </optgroup>
                                            <%}%>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    PDPA Specific Measures
                                    <select name="specific_id" class="select2 form-control" multiple="multiple"
                                        style="width: 100%;">
                                        <%if (specific) {%>
                                            <%for (let i=0;i<specific.length;i++){%>
                                                <option value="<%=specific[i].specific_id%>">
                                                    <%=specific[i].measures_section_name%>
                                                </option>
                                                <%}%>
                                                    <%}%>
                                    </select>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-success">บันทึกข้อมูล</button>
                                <a href="/classification/event/" class="btn btn-secondary">ยกเลิก</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/ui/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="/UI/assets/libs/select2/dist/js/select2.full.min.js"></script>
    <script src="/UI/assets/libs/select2/dist/js/select2.min.js"></script>
    <script src="/UI/dist/js/pages/forms/select2/select2.init.js"></script>

    <%- include('../_footer') -%>